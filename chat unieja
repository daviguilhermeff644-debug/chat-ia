<div id="chat-container">
    <header>UniEja AD - Professor Virtual üéì</header>
    <div id="chat-window">
        <div class="msg ai">Ol√°! Sou seu Professor Virtual da UniEja. Estou aqui para tirar suas d√∫vidas sobre as mat√©rias e te ajudar a conquistar seu diploma. Como posso te ajudar hoje?</div>
    </div>
    <div id="typing" class="typing">O Professor est√° analisando sua d√∫vida...</div>
    <form class="input-area" id="chat-form">
        <input type="text" id="user-input" placeholder="Pergunte sobre sua conclus√£o de curso..." required autocomplete="off">
        <button type="submit" id="send-btn">Enviar</button>
    </form>
</div>

<script>
    const chatForm = document.getElementById('chat-form');
    const chatWindow = document.getElementById('chat-window');
    const userInput = document.getElementById('user-input');
    const typing = document.getElementById('typing');
    const sendBtn = document.getElementById('send-btn');

    function addMessage(text, side) {
        const msgDiv = document.createElement('div');
        msgDiv.className = `msg ${side}`;
        msgDiv.innerText = text;
        chatWindow.appendChild(msgDiv);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    chatForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const text = userInput.value.trim();
        if (!text) return;

        addMessage(text, 'user');
        userInput.value = '';
        
        typing.style.display = 'block';
        sendBtn.disabled = true;

        try {
            // URL DO SEU WEBHOOK ATUALIZADA
            const response = await fetch('https://vida09.app.n8n.cloud/webhook/901b43db-e0a2-41c9-b638-7efe05d7045b', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ chatInput: text })
            });

            if (!response.ok) throw new Error('Erro na resposta do servidor');

            const data = await response.json();
            
            // O c√≥digo abaixo espera que o n√≥ "Respond to Webhook" devolva { "resposta": "texto" }
            const respostaFinal = data.resposta || "Tive um probleminha para processar isso. Pode repetir?";
            addMessage(respostaFinal, 'ai');

        } catch (error) {
            console.error('Erro:', error);
            addMessage("Desculpe, professor est√° offline no momento. Tente novamente em instantes.", 'ai');
        } finally {
            typing.style.display = 'none';
            sendBtn.disabled = false;
        }
    });
</script>

